  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "log": true,
      "hostname": "host.docker.internal",
      "port": 9001,
      "pathMappings": {
        "/www/turtle-admin": "${workspaceRoot}"
      }
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "hostname": "host.docker.internal",
      "port": 9001
    }
  ]
}
